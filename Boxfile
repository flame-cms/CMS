web1:
  name: flame-app
  shared_writable_dirs:
    - temp
    - log
    - www/media
    - www/media/images_thumbnails
    - www/media/images
    - www/media/imported_images
  document_root: www
  php_version: 5.3.10
  php_extensions:
    - pdo_mysql
    - mysql
    - gd
    - apc
    - intl
    - zip # for composer
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install"
  after_deploy:
    - "rm -Rf temp/*"
    - "rm -Rf log/*"
    - "php app/doctrine-cli.php orm:schema-tool:drop --force"
    - "php app/doctrine-cli.php orm:schema-tool:create"
    - "php app/doctrine-cli.php dbal:import app/default-data.sql"
db1: #component type & number
  name: flame-app
  type: mysql